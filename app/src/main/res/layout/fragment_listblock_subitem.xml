<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.widget.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondaryContainer"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    app:roundedCorners="none">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:padding="5dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/textColorLinkInverse"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_round_bookmark_48"
                app:tint="@android:color/white" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="19dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/itemSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:ellipsize="end"
                    android:text="Subtitle"
                    android:textSize="15dp"
                    android:visibility="visible"
                    app:autoSizeMaxTextSize="15dp"
                    app:autoSizeMinTextSize="13dp"
                    app:autoSizeTextType="uniform" />

            </TableRow>

        </LinearLayout>

    </TableRow>

</de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>