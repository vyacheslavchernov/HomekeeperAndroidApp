<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="HomeKeeper"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.dlyt.yanndroid.oneui.widget.RoundFrameLayout
        android:id="@+id/detailedView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/colorSecondaryContainer"
        android:clickable="true"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="24dp"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0"
        app:roundedCorners="all|top_right|top_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/sesl_list_divider"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:padding="5dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/textColorLinkInverse"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_round_bookmark_48"
                        app:tint="@android:color/white" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20546.88 р."
                        android:textSize="19dp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/itemSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:text="10.11.2022"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:alpha="0.6"
                            android:text="·"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:text="Последний расчёт"
                            android:textSize="15dp" />
                    </TableRow>

                </LinearLayout>

            </TableRow>
        </LinearLayout>

    </de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>

    <de.dlyt.yanndroid.oneui.widget.RoundFrameLayout
        android:id="@+id/roundFrameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:animateLayoutChanges="true"
        android:background="?attr/colorSecondaryContainer"
        android:clickable="true"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="0dp"
        android:rotationY="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedView"
        app:roundedCorners="top_right|top_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/sesl_list_divider"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:padding="5dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/textColorLinkInverse"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_folder_48"
                        app:tint="@android:color/white" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/itemLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Другие расчёты"
                    android:textSize="19dp" />

            </TableRow>
        </LinearLayout>

    </de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>

    <de.dlyt.yanndroid.oneui.widget.RoundFrameLayout
        android:id="@+id/roundFrameLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/colorSecondaryContainer"
        android:clickable="true"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundFrameLayout2"
        app:layout_constraintVertical_bias="0.0"
        app:roundedCorners="bottom_right|bottom_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/sesl_list_divider"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="12dp"
                android:clickable="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:padding="5dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/roundedImageView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/textColorLinkInverse"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_round_post_add_48"
                        app:tint="@android:color/white" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/itemLabel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Добавить расчёт"
                    android:textSize="19dp" />

            </TableRow>
        </LinearLayout>

    </de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>